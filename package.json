{
  "name": "orbit-db",
  "version": "0.17.2",
  "description": "Distributed p2p database on IPFS",
  "author": "Haad",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/haadcode/orbit-db"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "browser": {
    "fs-pull-blob-store": "idb-pull-blob-store"
  },
  "bin": {
    "orbitdb": "./src/cli/bin.js"
  },
  "main": "src/OrbitDB.js",
  "dependencies": {
    "libp2p-floodsub": "github:libp2p/js-libp2p-floodsub#orbit-floodsub",
    "logplease": "^1.2.12",
    "orbit-db-cache": "github:orbitdb/orbit-db-cache#fix/default-filename",
    "orbit-db-counterstore": "github:orbitdb/orbit-db-counterstore#feat/cli",
    "orbit-db-docstore": "github:orbitdb/orbit-db-docstore#feat/cli",
    "orbit-db-eventstore": "github:orbitdb/orbit-db-eventstore#feat/cli",
    "orbit-db-feedstore": "github:orbitdb/orbit-db-feedstore#feat/cli",
    "orbit-db-kvstore": "github:orbitdb/orbit-db-kvstore#feat/cli",
    "orbit-db-pubsub": "~0.2.1",
    "progress-string": "^1.2.1",
    "single-line-log": "^1.1.2",
    "yargs": "^8.0.2"
  },
  "devDependencies": {
    "babel-core": "^6.22.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-transform-runtime": "^6.22.0",
    "babel-polyfill": "^6.22.0",
    "babel-preset-es2015": "^6.22.0",
    "chance": "^1.0.6",
    "ipfs-daemon": "~0.3.0-beta.24",
    "json-loader": "^0.5.4",
    "mocha": "^3.2.0",
    "p-each-series": "^1.0.0",
    "rimraf": "^2.5.4",
    "uglify-js": "github:mishoo/UglifyJS2#harmony",
    "webpack": "^2.2.1"
  },
  "scripts": {
    "examples": "npm run examples:node",
    "examples:node": "node examples/eventlog.js",
    "examples:browser": "open examples/browser/index.html && LOG=debug node examples/start-daemon.js",
    "test": "mocha",
    "build": "npm run build:examples && npm run build:dist",
    "build:examples": "webpack --config conf/webpack.example.config.js --sort-modules-by size",
    "build:dist": "webpack -p --config conf/webpack.config.js --sort-modules-by size"
  }
}
